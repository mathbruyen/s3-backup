{
  "name": "backup",
  "private": true,
  "version": "0.0.1",
  "description": "Encrypted backup on S3",
  "scripts": {
    "push": "babel-node --optional es7.asyncFunctions core/push.js",
    "pages": "npm run clean-pages && npm run copy-statics && npm run build-pages",
    "clean-pages": "find _gh-pages/ ! -path '_gh-pages/.git*' -type f -exec rm -f {} +",
    "copy-statics": "cp -R webapp/static/* _gh-pages",
    "build-pages": "AWS_SERVICES=s3-2006-03-01 browserify webapp/app.js -t [ babelify --optional es7.asyncFunctions ] --outfile _gh-pages/app.js",
    "serve-pages": "http-server -p 8080 _gh-pages",
    "deploy-pages": "cd _gh-pages && git add --all && git commit -m \"Update site\" && git push",
    "setup-pages": "git clone --depth 1 -b gh-pages $(git config --get remote.origin.url) _gh-pages"
  },
  "author": "Mathieu Bruyen <code@mais-h.eu>",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1.16",
    "babel": "^5.1.10",
    "git-sha1": "^0.1.2",
    "js-git": "^0.7.7",
    "mkdirp": "^0.5.0"
  },
  "devDependencies": {
    "http-server": "^0.8.0",
    "babelify": "^6.0.2",
    "browserify": "^9.0.8",
    "react": "^0.13.2"
  }
}
